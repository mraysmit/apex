  "validation-rules": {
    "age": {
      "min": 18,
      "max": 120,
      "errorMessage": "Age must be between 18 and 120"
    },
    "email": {
      "required": true,
      "format": "email",
      "errorMessage": "Valid email address required"
    },
    "balance": {
      "min": 0.0,
      "errorMessage": "Account balance cannot be negative"
    },
    "country": {
      "validValues": ["US", "GB", "CA", "DE", "FR", "JP", "AU", "NZ"],
      "errorMessage": "Country must be from supported list"
    }
  },
  "test-scenarios": {
    "all-valid": {
      "description": "All customers should pass validation",
      "customerIds": ["CUST001", "CUST002", "CUST003", "CUST004"],
      "expectedResult": "PASS"
    },
    "mixed-validation": {
      "description": "Mix of valid and invalid customers",
      "customerIds": ["CUST001", "CUST005", "CUST002", "CUST006"],
      "expectedValidCount": 2,
      "expectedInvalidCount": 2
    },
    "all-invalid": {
      "description": "All customers should fail validation",
      "customerIds": ["CUST005", "CUST006", "CUST007", "CUST008"],
      "expectedResult": "FAIL"
    }
  }
}
